<%if @originating.errors.blank?%>
$("#article_originatings_list").html("<%= j(render(:partial => 'originatings/list', locals: {article: @article})) %>");
$("#article_originatings_form").html("<%= j(render(:partial => 'originatings/remote_form', locals: {article: @article, originating: Originating.new})) %>");
new Noty({
    type: 'success',
    theme    : 'relax',
    timeout: 2000,
    layout: 'bottomLeft',
    text: '<%=t :added_successfully%>'
}).show();
<%else%>
new Noty({
    type: 'error',
    theme    : 'relax',
    timeout: 3000,
    layout: 'bottomLeft',
    text: '<%=t @originating.errors.full_messages%>'
}).show();
<%end%>
